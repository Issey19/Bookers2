<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            <table class="table">
            <tr>
              <th>name</th>
                <th><%= @user.name %></th>
                  </tr>
                  <tr>
              <% if @user.id == current_user.id %>
              <th>introduction</th>
              <th></th>
                </tr>
              </table>
              <tr>
                <% if @user.id == current_user.id %>
                  <%= link_to "", edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
                  <% end %>
              <% end %>

        <div class="mt-3">
          <h2>New book</h2>
            <%= form_with model: @books, local:true do |f| %>

                    <h6>Title</h6>
                    <%= f.text_field :title %>
                  <br>
                  <br>
                    <h6>Opinion</h6>
                     <%= f.text_field :body %>
                  <br>
                  <br>
                  <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">

            <% end %>
        </div>
      </div>


          <div class="col-md-8 offset-md-1">
            <h3>Book detail</h3>
            <table class="table">
  		      <tbody><tr>
            <td>
            <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
            </td>
            <td><p><%= @book.title %></p></td>
            <td><p><%= @book.body %></p></td>

            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
              <td><a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger" rel="nofollow" data-method="delete">Destroy</a></td>
            <% end %>
            </tr>
            </table>
          </div>
      </div>
    </div>
</div>