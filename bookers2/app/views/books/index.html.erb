<% @books.each do |book| %>
<div>
  <%= attachment_image_tag post_image, :book %>
  <p><%= image_tag('sample-author1.jpg') %></p>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.opinion %></p>
  <%= link_to "Edit", edit_book_path(@blog) %>
  <%= link_to "Destroy", book_path(@book) %>
</div>
<% end %>