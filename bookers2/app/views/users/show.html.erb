<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
        </tr>
        <tr>
        <% if @user.id == current_user.id %>
        <th>introduction</th>
        <th></th>
        </tr>
      </table>
      <tr>
          <% if @user.id == current_user.id %>
          <div class="row">
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/:id/edit"></a>
          </div>
            <% end %>
          <% end %>
      </div>
    </div>

          <div class="mt-3">
          <h2>New book</h2>
            <%= form_with model: @books, local:true do |f| %>
                <div class="form-group">
                  <h4>Title</h4>
                    <%= f.text_field :title %>
                </div>
                  <div class="form-group">
                    <h4>Opinion</h4>
                     <%= f.text_field :body %>
                  </div>
                    <div class="form-group">
                  <br>
                  <%= f.submit 'Create Book' %>
                    </div>
        </div>
        <% end %>


        <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="table table-hover table-inverse">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
        <%= link_to @user.name  ,edit_user_path(@user) %>
        <% @book.each do |book| %>
          <th>Title:<%= book.title %></th>
          <th>Opinion:<%= book.body %></th>
          <th colspan="3"></th>
        <% end %>
    </div>
  </div>
</div>
</table>